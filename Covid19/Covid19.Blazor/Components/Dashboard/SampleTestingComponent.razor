
    <div class="container">

        <div class="mt-4">
            <div class="row">
                <div class="six columns">
                    <div>
                        <h4>Sample Test Stats</h4>
                    </div>
                </div>
                <div class="six columns">
                    <div class="float-right">
                        <h4>Test Date : @Data.day</h4>
                    </div>
                </div>
            </div>
            
            <div class="row">
                <div class="four columns">
                    <div class="shadow rounded p-4 h-100" style="background-color:#06C7C7">
                        <div class="row">
                            <span class="twelve columns" style="color: #023636">
                                Total Sample Tested
                            </span>
                        </div>
                        <div class="row">
                            <span class="twelve columns" style="color:#054747">
                                @(Data.totalSamplesTested ?? 0)
                            </span>
                        </div>
                    </div>
                </div>

                <div class="four columns">
                    <div class="shadow rounded p-4 h-100" style="background-color:#06C7C7">
                        <div class="row">
                            <span class="twelve columns" style="color: #023636">
                                Total Individuals Tested
                            </span>
                        </div>

                        <div class="row">
                            <span class="twelve columns" style="color:#054747">
                                @(Data.totalIndividualsTested ?? 0)
                            </span>
                        </div>
                    </div>
                </div>

                <div class="four columns">
                    <div class="shadow rounded p-4 h-100" style="background-color:#06C7C7">
                        <div class="row">
                            <span class="twelve columns" style="color: #023636">
                                Total Positive Cases
                            </span>
                        </div>

                        <div class="row">
                            <span class="twelve columns" style="color:#054747">
                                @(Data.totalPositiveCases ?? 0)
                            </span>
                        </div>
                    </div>
                </div>
            </div>
        </div>

    </div>

@code {

    [Parameter]
    public Covid19.Models.SampleTestModels.DataModel Data { get; set; }

}
